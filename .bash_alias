#---------------------------------------------------------------------------------------#
..() {
    if [ "$1" = "" ];
    then
            cd ..;
        return;
    fi
    NUM_TIMES=$( echo $(($1 - 1)) );
    for ((x=0;$x<=$NUM_TIMES; x++))
    do
        cd ..;
    done;
}

tab() {
  osascript 2>/dev/null <<EOF
    tell application "System Events"
      tell process "Terminal" to keystroke "t" using command down
    end
    tell application "Terminal"
    activate
    	set shell to do script "cd /Users/user_name/Desktop" in window 1
    	# do script "$1" in shell # commands to be executed
	end tell
EOF
}

